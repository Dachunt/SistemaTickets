@model SistemaTickets.Models.Usuarios
@{
	ViewData["Title"] = "Perfil";

}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="/css/usuarios.css" />

<div class="container py-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white rounded-top-4 d-flex align-items-center">
            <i class="bi bi-person-circle me-2 fs-3"></i>
            <h3 class="mb-0">Mi Perfil</h3>
        </div>

        <div class="card-body p-4">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-uppercase text-muted">Nombre</h6>
                    <p class="fs-5">@Model.Nombre</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-uppercase text-muted">Email</h6>
                    <p class="fs-5">@Model.Email</p>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-uppercase text-muted">Teléfono</h6>
                    <p class="fs-5">@Model.Telefono</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-uppercase text-muted">Rol</h6>
                    <p class="fs-5">@Model.Rol?.NombreRol</p>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-6">
                    <h6 class="text-uppercase text-muted">¿Tiene empresa?</h6>
                    <p class="fs-5">
                        @(Model.TieneEmpresa ? "Sí" : "No")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

