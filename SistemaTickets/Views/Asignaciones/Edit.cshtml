@model SistemaTickets.Models.Tickets

@{
    ViewData["Title"] = "Editar Prioridad";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="/css/usuarios.css" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-blue fw-bold">Editar Prioridad del Ticket</h2>
</div>

<div class="card-body bg-white">
    <form asp-action="Edit" method="post" class="border rounded p-4 bg-light mt-3">
        <input type="hidden" asp-for="TicketId" />
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Prioridad</label>
                <select asp-for="Prioridad" class="form-control rounded-pill" required>
                    <option value="">Seleccione una opción</option>
                    <option value="Crítico">Crítico</option>
                    <option value="Importante">Importante</option>
                    <option value="Baja">Baja</option>
                </select>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-outline-primary rounded-pill px-4">
                <i class="fas fa-save me-2"></i>Guardar cambios
            </button>
        </div>
    </form>
</div>
