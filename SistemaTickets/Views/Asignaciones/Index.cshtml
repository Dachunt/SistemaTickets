@model List<SistemaTickets.Models.TicketAsignacionViewModel>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="/css/asignaciones.css" />


<div class="container mt-5">
    <div class="table-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold">🎫 Tickets Abiertos</h3>
            <a asp-controller="Home" asp-action="Index" class="btn btn-success btn-sm btn-asignar">
                <i class="bi bi-arrow-left"></i> volver
            </a>


        </div>

        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th>Ticket</th>
                    <th>Descripción</th>
                    <th>Categoría</th>
                    <th>Estado</th>
                    <th>Asignar Técnico</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    var estadoClass = ticket.Estado switch
                    {
                        "Abierto" => "status-abierto",
                        "En Proceso" => "status-enproceso",
                        "Cerrado" => "status-cerrado",
                        _ => "status-abierto"
                    };

                    <tr>
                        <td>@ticket.TicketId</td>
                        <td>@ticket.Descripcion</td>
                        <td>@ticket.Categoria</td>
                        <td>
                            <span class="status-badge @estadoClass">@ticket.Estado</span>
                        </td>
                        <td>
                            <form asp-action="Asignar" method="post" class="d-flex gap-2 align-items-center">
                                <input type="hidden" name="TicketId" value="@ticket.TicketId" />
                                <select name="TecnicoId" required class="form-select form-select-sm w-auto">
                                    <option value="">-- Seleccione --</option>
                                    @foreach (var tecnico in ticket.TecnicosDisponibles)
                                    {
                                        <option value="@tecnico.UserId">@tecnico.Nombre</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-success btn-sm btn-asignar">
                                    <i class="bi bi-check-circle"></i> Asignar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

