@{
    ViewBag.Title = "Menú Soporte Técnico";
    Layout = "~/Views/Shared/_Layout_Soporte.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Soporte Técnico - Menú</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card-option {
            background-color: #e6f0ff;
            border: 1px solid #cce0ff;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            transition: transform 0.2s ease;
            height: 100%;
        }

            .card-option:hover {
                transform: scale(1.03);
            }

        .card-title {
            font-weight: bold;
            font-size: 1.2rem;
        }

        .card-text {
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row g-4 justify-content-center">
            <div class="col-md-4">
                <div class="card-option">
                    <div class="card-title">CREAR UN NUEVO TICKET</div>
                    <div class="card-text">Presiona para crear un ticket nuevo</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-option">
                    <div class="card-title">GESTION TICKETS</div>
                    <div class="card-text">Gestión de tickets</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-option">
                    <div class="card-title">ASIGNACIONES</div>
                    <div class="card-text">Asignaciones</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-option">
                    <div class="card-title">VER MIS ASIGNACIONES</div>
                    <div class="card-text">Mis asignaciones</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-option">
                    <div class="card-title">HISTORIAL</div>
                    <div class="card-text">Historial</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-option">
                    <div class="card-title">CIERRE DE TICKET</div>
                    <div class="card-text">Cierre de ticket</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-option">
                    <div class="card-title">GRAFICAS</div>
                    <div class="card-text">Cierre de ticket</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-option">
                    <div class="card-title">INFORMES</div>
                    <div class="card-text">Cierre de ticket</div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

