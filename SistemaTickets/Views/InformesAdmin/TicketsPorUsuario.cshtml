@model List<TicketsPorUsuarioViewModel>

@{
    ViewData["Title"] = "Tickets por Usuario";
}

<div class="container mt-4 p-4 shadow rounded bg-white">
    <div class="text-center mb-4">
        <h2 class="text-primary fw-bold">Tickets por Usuario</h2>
        <p class="text-muted">Resumen de la cantidad de tickets creados por cada usuario</p>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-primary">
                <tr>
                    <th>Usuario ID</th>
                    <th>Cantidad de Tickets</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserId</td>
                        <td>@item.Cantidad</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-end mt-3">
        <a href="@Url.Action("DescargarPdfUsuarios")" class="btn btn-outline-primary" target="_blank">
            Descargar PDF
        </a>
    </div>
</div>
